{
  "name": "chat-nodejs-socketio",
  "version": "2.0.0",
  "description": "Chat system thời gian thực giữa User và Admin với Socket.IO và PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:up": "cd database && docker compose up -d",
    "db:down": "cd database && docker compose down",
    "db:logs": "cd database && docker compose logs -f postgres"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "chat",
    "socket.io",
    "nodejs",
    "express",
    "real-time",
    "postgresql"
  ],
  "author": "ThanhTT88",
  "license": "MIT"
}
